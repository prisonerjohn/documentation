{
  "name": "game-ci",
  "version": "0.1.0",
  "description": "Website for projects within the GameCI group",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"-r esm\" next",
    "build": "node -v && cross-env NODE_OPTIONS=\"-r esm\" next build",
    "analyze": "cross-env-shell NODE_OPTIONS=\"-r esm\" ANALYZE=true next build",
    "lint": "prettier --write . --loglevel=warn && eslint . --quiet --fix",
    "eslint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "next start"
  },
  "dependencies": {
    "@ant-design/icons": "4.2.1",
    "@next/bundle-analyzer": "^9.1.4",
    "algoliasearch": "^4.8.4",
    "antd": "4.2.5",
    "babel-plugin-import": "1.13.0",
    "cross-env": "^7.0.2",
    "dayjs": "1.8.28",
    "esm": "^3.2.25",
    "gray-matter": "4.0.2",
    "highlight.js": "^10.4.1",
    "next": "9.4.4",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "raw-loader": "^4.0.1",
    "rc-picker": "^1.6.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-instantsearch": "^6.8.3",
    "react-instantsearch-dom": "^6.8.3",
    "react-markdown": "4.3.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  },
  "browser": {
    "fs": false,
    "path": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
